<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CycleActivity">

        <TextView
            android:id="@+id/recyclerVideoType5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/carter_one"
            android:text="Cycles"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recyclerVideoType4"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/carter_one"
            android:text="Previous Cycles"
            android:textColor="@color/design_default_color_primary"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cycleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerVideoType4"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerVideoType5"
            tools:layout_editor_absoluteX="0dp"
            tools:visibility="visible">

            <TextView
                android:id="@+id/currentcyclenameText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="16dp"
                android:text="Current Cycle Name:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/completecreatecycleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cycledateCreatedText"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cycledateCreatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                app:layout_constraintStart_toEndOf="@+id/datecreatedText2"
                app:layout_constraintTop_toTopOf="@+id/datecreatedText2"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cyclenameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                app:layout_constraintStart_toEndOf="@+id/currentcyclenameText2"
                app:layout_constraintTop_toTopOf="@+id/currentcyclenameText2"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/datecreatedText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Date Created:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/currentcyclenameText2"
                app:layout_constraintTop_toBottomOf="@+id/currentcyclenameText2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>