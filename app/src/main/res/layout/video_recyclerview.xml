<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerVideoType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="videoType"
        android:fontFamily="@font/carter_one"
        android:textColor="@color/design_default_color_primary"
        android:textSize="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/videoEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recyclerThumbnail"
                android:layout_width="175dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_menu_report_image" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/recyclerVideoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="videoName"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/videoPlayButton"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Play" />

            <TextView
                android:id="@+id/videoID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="videoid" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>